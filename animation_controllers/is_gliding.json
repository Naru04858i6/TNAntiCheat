{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.is_gliding": {
      "states": {
        "default": {
          "on_entry": [
            "/tag @s remove ac:is_gliding"
          ],
          "transitions": [
            {
              "is_gliding": "v.gliding_time = 0; return q.is_gliding;"
            }
          ]
        },
        "is_gliding": {
          "on_entry": [
            "/tag @s add ac:is_gliding"
          ],
          "transitions": [
            {
              "is_gliding_exit": "!q.is_gliding"
            }
          ]
        },
        "is_gliding_exit": { // small delay
          "transitions": [
            {
              "default": "v.gliding_time >= 3"
            },
            {
              "is_gliding": "v.gliding_time = (v.gliding_time < 3 && !q.is_gliding) ? v.gliding_time + 1 : 0; return v.gliding_time < 3;"
            },
            {
              "is_gliding": "v.gliding_time = q.is_gliding ? 0 : v.gliding_time; return q.is_gliding;"
            }
          ]
        }
      }
    }
  }
}