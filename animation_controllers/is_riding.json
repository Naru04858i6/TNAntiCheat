{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.is_riding": {
      "states": {
        "default": {
          "on_entry": [
            "/tag @s remove ac:is_riding"
          ],
          "transitions": [
            {
              "is_riding": "v.riding_time = 0; return q.is_riding;"
            }
          ]
        },
        "is_riding": {
          "on_entry": [
            "/tag @s add ac:is_riding"
          ],
          "transitions": [
            {
              "is_riding_exit": "!q.is_riding"
            }
          ]
        },
        "is_riding_exit": { // small delay
          "transitions": [
            {
              "default": "v.riding_time >= 2"
            },
            {
              "is_riding": "v.riding_time = (v.riding_time < 2 && !q.is_riding) ? v.riding_time + 1 : 0; return v.riding_time < 2;"
            },
            {
              "is_riding": "v.riding_time = q.is_riding ? 0 : v.riding_time; return q.is_riding;"
            }
          ]
        }
      }
    }
  }
}